<!DOCTYPE html>
<html>
	<head>
		<title>Penn Hookups</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>

		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="/">Penn Hookups</a>
					<div class="nav-collapse">
						<%= tabs %>

							<% if person_signed_in? %>
							<ul class="nav nav-pills"><li>
							<%= link_to 'Logout',
							destroy_person_session_path, {:style => 'color:#00688B' } ,
							method: :delete %>
							</li></ul>
							<% end %>

					</div>
				</div>
			</div>
		</div>

		<div class="container">
			<% if alert %>
			<div class="alert alert-error">
				<%= alert %>
			</div>
			<% end %>
			<% if notice %>
			<div class="notice notice-error">
				<%= notice %>
			</div>
			<% end %>

			<%= yield %>
		</div>

		<footer>
			<div id="tag">
				***
				<br>
				Â© 2012, Shaanan Cohney
			</div>
		</footer>

	</body>
</html>
