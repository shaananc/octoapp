	<div class="container">
	<%= semantic_form_for @person, :remote =>false do |f| %>
<%= f.semantic_errors %>

<%= f.inputs do%>
<%= f.input :name %>
<%= f.input :gender, :as => :select, :collection => ["Male", "Female"], :required => true %>
<%= f.input :aboutme, :as  => :text, :label=>"About You", :input_html => {:rows => 5}%>
<%= f.input :email %>
<%= f.input :password %>
<%= f.input :password_confirmation, :required => true %>
<% end%>
<%= f.actions :submit, :cancel%>
<% end %>

</div>
