 <%= semantic_form_for @person do |f| %>
 <%= f.semantic_errors %>

    <%= f.inputs do%>
    	<%= f.input :name %>
    	<%= f.input :age %>
    	<%= f.input  :building %>
    	<%= f.input :gender, :as => :select, :collection => ["Male", "Female"] %>
    	<%= f.input :school %>
    	<% end%>
    <%= f.actions :submit, :cancel%>
  <% end %>